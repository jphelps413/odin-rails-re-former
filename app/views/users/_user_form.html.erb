<%= form_for @user do |f| %>
  <ul>
    <% @user.errors.full_messages.each do |err| %>
      <li><%= err %></li>
    <% end %>
  </ul>

  <p>
  <%= f.label :username %>
  <%= f.text_field :username %>
  </p>

  <p>
  <%= f.label :email %>
  <%= f.text_field :email %>
  </p>

  <p>
  <%= f.label :password, 'Password (8 chars min)' %>
  <%= f.password_field :password %>
  </p>

  <%= f.submit %>
<% end %>

<!--
<form method="post" action="/users" accept-charset="UTF-8">
  User Name: <input type="text" name="user[username]"><br>
  Email Address: <input type="text" name="user[email]"><br>
  Password: <input type="password" name="user[password]"><br>
  <br>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="Create">
</form>
-->

<% if false %>
<%= form_tag '/users', method: :post do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %></br>
  <%= label_tag :email %>
  <%= text_field_tag :email %></br>
  <%= label_tag :password %>
  <%= password_field_tag :password %></br>
  <%= submit_tag "Create" %>
<% end %>
<% end %>

